<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="University.App.Views.Forms.LoginView"
             WidthRequest="20" Padding="20"
             xmlns:viewModels="clr-namespace:University.App.ViewModels.Forms"
             BackgroundColor="DimGray">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="50" VerticalOptions="Center">

            <Image Source="ImageLogin" HeightRequest="100" WidthRequest="100"/>

            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Log In" TextColor="Black" BackgroundColor="Aqua" Command="{Binding LoginCommand}" />

            <Grid>
            <Button Text="Register" TextColor="Black"  BackgroundColor="Transparent" HorizontalOptions="Start" Command="{Binding RegisterCommand}" />
            <Button Text="Forgot Password" TextColor="Navy"  BackgroundColor="Transparent" HorizontalOptions="End" Command="{Binding ForgotPasswordCommand}" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>